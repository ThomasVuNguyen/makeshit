<mujoco model="beewalker">
  <compiler angle="degree" coordinate="local" inertiafromgeom="true"/>
  
  <option timestep="0.002" gravity="0 0 -9.81" integrator="RK4"/>
  
  <visual>
    <global offwidth="800" offheight="800"/>
  </visual>
  
  <default>
    <joint limited="true" damping="0.5" armature="0.01"/>
    <geom contype="1" conaffinity="1" condim="3" friction="1 0.5 0.5"/>
    <motor ctrllimited="true" ctrlrange="-1 1"/>
  </default>
  
  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.4 0.6 0.8" rgb2="0.1 0.1 0.2" width="512" height="512"/>
    <texture type="2d" name="groundplane" builtin="checker" rgb1="0.25 0.35 0.4" rgb2="0.15 0.25 0.3" width="512" height="512"/>
    <material name="groundplane" texture="groundplane" texrepeat="10 10"/>
    <!-- Smooth plastic materials -->
    <material name="shell_white" rgba="0.95 0.95 0.95 1" specular="0.5" shininess="0.5"/>
    <material name="shell_light" rgba="0.82 0.84 0.86 1" specular="0.5" shininess="0.4"/>
    <material name="shell_mid" rgba="0.55 0.57 0.6 1" specular="0.4" shininess="0.5"/>
    <material name="shell_dark" rgba="0.25 0.27 0.3 1" specular="0.3" shininess="0.6"/>
    <material name="joint_ring" rgba="0.18 0.18 0.2 1" specular="0.2" shininess="0.8"/>
    <material name="screw_metal" rgba="0.35 0.35 0.38 1" specular="0.8" shininess="0.9"/>
  </asset>
  
  <worldbody>
    <!-- Ground plane -->
    <geom name="floor" type="plane" size="10 10 0.1" material="groundplane"/>
    <light directional="true" pos="1 -1 3" dir="-0.2 0.2 -1" diffuse="1 1 1"/>
    <light directional="true" pos="-1 1 2" dir="0.2 -0.2 -1" diffuse="0.5 0.5 0.5"/>
    
    <camera name="track" mode="trackcom" pos="0 -0.8 0.5" xyaxes="1 0 0 0 0.5 0.87"/>
    <camera name="reference" pos="0.5 -0.5 0.5" xyaxes="0.7 0.7 0 -0.3 0.3 0.9"/>
    
    <!-- BeeWalker Robot - Bulbous egg-shaped servo housing design -->
    <body name="torso" pos="0 0 0.38">
      <freejoint name="root"/>
      <site name="torso_site" pos="0 0 0" size="0.01"/>
      
      <!-- Main torso - rectangular body with rounded edges -->
      <geom name="torso_main" type="box" size="0.10 0.05 0.025" material="shell_white"/>
      <geom name="torso_accent" type="box" pos="0 0 0.018" size="0.08 0.04 0.01" material="shell_light"/>
      <!-- Bottom accent strip -->
      <geom name="torso_bottom" type="box" pos="0 0 -0.022" size="0.09 0.045 0.005" material="shell_dark"/>
      
      <!-- ========== RIGHT LEG ========== -->
      <!-- Hip segment - large oval/egg shaped housing -->
      <body name="right_hip" pos="0.07 0 -0.045">
        <joint name="right_hip_joint" type="hinge" axis="1 0 0" range="-90 90"/>
        <!-- Main bulbous housing - egg shape using ellipsoid -->
        <geom name="right_hip_shell_top" type="ellipsoid" pos="0 0 0" size="0.038 0.038 0.045" material="shell_light"/>
        <!-- Joint connection ring at top -->
        <geom name="right_hip_ring_top" type="cylinder" pos="0 0 0.042" size="0.03 0.006" material="joint_ring"/>
        <!-- Bottom cap for transition -->
        <geom name="right_hip_cap" type="ellipsoid" pos="0 0 -0.04" size="0.032 0.032 0.018" material="shell_mid"/>
        <!-- Screw details on side -->
        <geom name="right_hip_screw" type="cylinder" pos="0.035 0 0" size="0.006 0.002" euler="0 90 0" material="screw_metal"/>
        
        <!-- Thigh segment - bulbous oval -->
        <body name="right_thigh" pos="0 0 -0.095">
          <joint name="right_knee_joint" type="hinge" axis="1 0 0" range="-90 90"/>
          <geom name="right_thigh_shell" type="ellipsoid" pos="0 0 0" size="0.038 0.038 0.045" material="shell_light"/>
          <geom name="right_knee_ring_top" type="cylinder" pos="0 0 0.042" size="0.03 0.006" material="joint_ring"/>
          <geom name="right_thigh_cap" type="ellipsoid" pos="0 0 -0.04" size="0.032 0.032 0.018" material="shell_mid"/>
          <geom name="right_thigh_screw" type="cylinder" pos="0.035 0 0" size="0.006 0.002" euler="0 90 0" material="screw_metal"/>
          
          <!-- Shin segment - bulbous oval -->
          <body name="right_shin" pos="0 0 -0.095">
            <joint name="right_ankle_joint" type="hinge" axis="1 0 0" range="-90 90"/>
            <geom name="right_shin_shell" type="ellipsoid" pos="0 0 0" size="0.038 0.038 0.045" material="shell_light"/>
            <geom name="right_ankle_ring_top" type="cylinder" pos="0 0 0.042" size="0.03 0.006" material="joint_ring"/>
            <geom name="right_shin_cap" type="ellipsoid" pos="0 0 -0.04" size="0.032 0.032 0.018" material="shell_mid"/>
            <geom name="right_shin_screw" type="cylinder" pos="0.035 0 0" size="0.006 0.002" euler="0 90 0" material="screw_metal"/>
            
            <!-- Foot - curved shoe shape -->
            <geom name="right_foot_base" type="ellipsoid" pos="0.015 0 -0.07" size="0.045 0.025 0.018" material="shell_dark"/>
            <geom name="right_foot_toe" type="sphere" pos="0.05 0 -0.072" size="0.018" material="shell_dark"/>
            <geom name="right_foot_heel" type="sphere" pos="-0.02 0 -0.072" size="0.016" material="shell_dark"/>
          </body>
        </body>
      </body>
      
      <!-- ========== LEFT LEG ========== -->
      <body name="left_hip" pos="-0.07 0 -0.045">
        <joint name="left_hip_joint" type="hinge" axis="1 0 0" range="-90 90"/>
        <geom name="left_hip_shell_top" type="ellipsoid" pos="0 0 0" size="0.038 0.038 0.045" material="shell_light"/>
        <geom name="left_hip_ring_top" type="cylinder" pos="0 0 0.042" size="0.03 0.006" material="joint_ring"/>
        <geom name="left_hip_cap" type="ellipsoid" pos="0 0 -0.04" size="0.032 0.032 0.018" material="shell_mid"/>
        <geom name="left_hip_screw" type="cylinder" pos="-0.035 0 0" size="0.006 0.002" euler="0 90 0" material="screw_metal"/>
        
        <body name="left_thigh" pos="0 0 -0.095">
          <joint name="left_knee_joint" type="hinge" axis="1 0 0" range="-90 90"/>
          <geom name="left_thigh_shell" type="ellipsoid" pos="0 0 0" size="0.038 0.038 0.045" material="shell_light"/>
          <geom name="left_knee_ring_top" type="cylinder" pos="0 0 0.042" size="0.03 0.006" material="joint_ring"/>
          <geom name="left_thigh_cap" type="ellipsoid" pos="0 0 -0.04" size="0.032 0.032 0.018" material="shell_mid"/>
          <geom name="left_thigh_screw" type="cylinder" pos="-0.035 0 0" size="0.006 0.002" euler="0 90 0" material="screw_metal"/>
          
          <body name="left_shin" pos="0 0 -0.095">
            <joint name="left_ankle_joint" type="hinge" axis="1 0 0" range="-90 90"/>
            <geom name="left_shin_shell" type="ellipsoid" pos="0 0 0" size="0.038 0.038 0.045" material="shell_light"/>
            <geom name="left_ankle_ring_top" type="cylinder" pos="0 0 0.042" size="0.03 0.006" material="joint_ring"/>
            <geom name="left_shin_cap" type="ellipsoid" pos="0 0 -0.04" size="0.032 0.032 0.018" material="shell_mid"/>
            <geom name="left_shin_screw" type="cylinder" pos="-0.035 0 0" size="0.006 0.002" euler="0 90 0" material="screw_metal"/>
            
            <!-- Foot -->
            <geom name="left_foot_base" type="ellipsoid" pos="-0.015 0 -0.07" size="0.045 0.025 0.018" material="shell_dark"/>
            <geom name="left_foot_toe" type="sphere" pos="-0.05 0 -0.072" size="0.018" material="shell_dark"/>
            <geom name="left_foot_heel" type="sphere" pos="0.02 0 -0.072" size="0.016" material="shell_dark"/>
          </body>
        </body>
      </body>
    </body>
  </worldbody>
  
  <actuator>
    <motor name="right_hip_motor" joint="right_hip_joint" gear="50"/>
    <motor name="right_knee_motor" joint="right_knee_joint" gear="50"/>
    <motor name="right_ankle_motor" joint="right_ankle_joint" gear="50"/>
    <motor name="left_hip_motor" joint="left_hip_joint" gear="50"/>
    <motor name="left_knee_motor" joint="left_knee_joint" gear="50"/>
    <motor name="left_ankle_motor" joint="left_ankle_joint" gear="50"/>
  </actuator>
  
  <sensor>
    <accelerometer name="torso_accel" site="torso_site"/>
    <gyro name="torso_gyro" site="torso_site"/>
  </sensor>
</mujoco>
